    publisher               = 'Horizontes S.A.'
    category                = 'news, politics, Salta, Argentina, World'
    oldest_article          = 2
    language                = 'es_AR'
    max_articles_per_feed   = 250
    no_stylesheets          = True
    use_embedded_content    = False
